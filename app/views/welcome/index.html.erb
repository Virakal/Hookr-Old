<%= bootstrap_form_tag url: '/translate', method: :post do |f| %>
	<%= f.select :from, ['British', 'American'], {
		label: 'From',
		selected: 'English',
		label_col: 'col-sm-1',
		control_col: 'col-sm-5',
		inline: true
	} %>
	<%= f.select :to, ['British', 'American'], {
		label: 'To',
		selected: 'American',
		label_col: 'col-sm-1',
		control_col: 'col-sm-5',
		inline: true
	} %>

	<%= f.text_area :source, label: "Source" %>
	<%= f.submit "Translate", class: 'btn btn-primary' %>
<% end %>
